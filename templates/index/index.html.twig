{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <p class="fs-1">Courts QRCode</p>
    <div class="d-flex justify-content-center">
        <div style="width: 400px" id="qr-reader"></div>
    </div>
    <div class="row">
        <input id="qr-code" class="form-control" type="text" >
        <div id="qr-code-result" class="alert alert-primary" role="alert">History</div>
    </div>
    <div class="row">
        <ul id="history" class="list-group list-group-flush">
            <li class="list-group-item">O12345667 - Ready To Ship</li>
        </ul>
    </div>
    <div class="row">
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="text">Oder Number: </p>
                        <p id="order-number" class="text"></p>
                    </div>
                    <div class="modal-footer">
                        <button id="ready-to-ship" type="button" class="btn btn-secondary" data-dismiss="modal">Ready To Ship</button>
                        <button id="push-order-to-detrack" type="button" class="btn btn-primary">Push Order To Detrack</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('js/html5-qrcode.min.js') }}"></script>
    <script src="{{ asset('js/qrcode.js') }}"></script>
{% endblock %}
