{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="row">
        <h1>Courts QRCode</h1>
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
            <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="btnradio1">Push Order To Detrack</label>

            <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
            <label class="btn btn-outline-primary" for="btnradio2">Ready To Ship</label>

            <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
            <label class="btn btn-outline-primary" for="btnradio3">Mark Quantity Issue</label>
        </div>
        <script src="{{ asset('js/html5-qrcode.min.js') }}"></script>
        <div>
            <div id="reader"></div>
            <input type="file" id="qr-input-file" accept="image/*">
        </div>
        <script src="{{ asset('js/qrcode.js') }}"></script>
    </div>
{% endblock %}
